= render "shared/error_messages", :target => @liquid_template
%fieldset#general_fields
	%legend= t(:general)
	= f.field_container :name do
		= f.label :name
		%br
		= f.text_field :name
	= f.field_container :description do
		= f.label :description
		%br
		= f.text_area :description, :rows=>2, :style => "height:50px !important;"
		
	= f.field_container :raw_item_template do
		= f.label :raw_item_template
		%br
		%code{ :class => 'html' }
			= f.text_area :raw_item_template, :class=>"liquid_area html"